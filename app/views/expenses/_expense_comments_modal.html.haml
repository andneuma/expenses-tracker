/ DEFINE COMMENT MODAL
.modal.fade{:id => "modal-#{expense.id}"}
  .modal-dialog{:role => 'document'}
    .modal-content
      .modal-header
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', :type => 'button'}
          %span{'aria-hidden' => 'true'} &#215;
        %h4.modal-title= "Comment for expense from #{expense.expense_date}"
      .modal-body
        .container-fluid
          .row
            - expense.comments.any? && expense.comments.each do |comment|
              = render partial: 'expenses/comment', locals: {comment: comment}
      .modal-footer
        %button.btn.btn-secondary{'data-dismiss' => 'modal', :type => 'button'} Close
