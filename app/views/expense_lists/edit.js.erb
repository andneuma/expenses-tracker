var form = "<%= j render 'form' %>";
var listId = "<%= @expense_list.id %>";
var allPanels = $('.expense-list')
var currentPanel = $('#expense_list_' + listId)
var createButton = $('.create-expense-list-button');

allPanels.css('opacity', '0.3');
currentPanel.after(form);
currentPanel.remove();
createButton.hide();

form.on('click', '.back-link', function(){
  form.before(currentPanel);
  form.remove();
  createButton.show();
});
