<div class='container'>
  <div class="row">
    <div class='panel-group' id='expense-list-panel-group'>
      <% if @expense_lists.any? %>
      <% @expense_lists.each do |expense_list| %>
      <div class="row">
        <div class='col-md-4 col-md-4 col-md-4'>
          <div class='panel panel-default'>
            <%= link_to expense_list_path(expense_list) do %>
            <div class='panel-heading'>
              <%= expense_list.name %>
            </div>
            <% end %>
            <div class='panel-body'>
              <p class='text-muted'>
                <%= expense_list.description %>
              </p>
            </div>
            <div class='panel-footer'>
              <small>Expenses in
                <%= "#{current_month_name}" %>:
              </small>
              <b><%= "#{expenses_in_current_month}â‚¬" %></b>
            </div>
          </div>
        </div>
        <% end %>
        <% else %>
        <p>There is no expense list yet...</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class='col-md-4 col-md-4 col-md-4'>
      <%= link_to "Create new expense list", new_expense_list_path, {class: 'btn btn-default btn-primary btn-success'} %>
    </div>
  </div>
</div>
