= form_for @todo do |f|
  - if @todo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo.errors.count, "error")} prohibited this todo from being saved:"
      %ul
        - @todo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :starts_at
    = f.date_select :starts_at
  .field
    = f.label :ends_at
    = f.date_select :ends_at
  .field
    = f.label :todo_list
    = f.text_field :todo_list
  .actions
    = f.submit 'Save'
